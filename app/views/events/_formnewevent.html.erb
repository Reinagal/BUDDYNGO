<div class="modal fade" id="modalNewEvent" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title w-100 font-weight-bold">Create an event 1/4</h4>
      </div>
      <div class="modal-body">
        <div class="container">
          <div class="row">
            <div class="col-xs-12 col-sm-8 col-sm-offset-2">
              <%= simple_form_for(Event.new, url: events_path, method: :post, remote: true) do |f| %>
                <div class="form-inputs">
                  <%= f.input :name,
                              required: true,
                              autofocus: true,
                              input_html: { autocomplete: "name" } %>
                  <%= f.input :description,
                              required: true,
                              input_html: { autocomplete: "description" } %>
                </div>

                <div class="form-actions">
                  <%= f.button :submit, "Next step", class: "btn btn-action" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
