<div class="modal-content">
  <div class="modal-header text-center">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title w-100 font-weight-bold">Create an event</h4>
  </div>
  <div class="modal-body">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-4 col-sm-offset-1">
          <h4>Invite your friends </h4>
          <%= form_for @event, url: event_path(@event), method: :patch do |event_form| %>
              <%= event_form.label :name %><br>
              <%= event_form.text_field :name %>
              <%= event_form.label :email %><br>
              <%= event_form.text_field :email %>
            <%= event_form.fields_for :guest do |guest_form| %>
              <h4>Add a Guest</h4>
                <%= guest_form.label :name %>
                <%= guest_form.text_field :name %>
                <%= guest_form.label :email %>
                <%= guest_form.text_field :email %>
            <% end %>
            <%= event_form.submit 'Invite' %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


