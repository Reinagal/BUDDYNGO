<div class="modal fade" id="modalNewEvent" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title w-100 font-weight-bold">Create an event</h4>
      </div>
      <div class="modal-body">
        <div class="container">
          <div class="row">
            <div class="col-xs-12 col-sm-4 col-sm-offset-1">
              <div class="form-post">
                <h1>Write a post</h1>

                <%= simple_form_for(Choice.new, url: events_path, method: :post) do |f| %>
                  <div class="row">
                    <div class="col-xs-6">

                      <div class="form-group">
                        <label class="control-label check_boxes optional">Categories</label>
                        <input type="hidden" name="post[theme_ids][]" value="">
                        <div class="theme-choices">
                          <% Theme.all.each do |theme| %>
                            <input type="checkbox" class="hidden" value="<%= theme.id %>" name="post[theme_ids][]" id="post_theme_ids_<%= theme.id %>">
                            <label for="post_theme_ids_<%= theme.id %>">
                              <%= theme.name %>
                              <i class="fa fa-check"></i>
                            </label>
                          <% end %>
                         </div>
                      </div>
                    </div>
                  </div>

                  <div class="form-actions">
                    <%= f.button :submit, "Next step", class: "btn btn-action" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

