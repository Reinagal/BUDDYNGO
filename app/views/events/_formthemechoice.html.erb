<div class="modal-content">
  <div class="modal-header text-center">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title w-100 font-weight-bold">Choose your themes 2/4</h4>
  </div>
  <div class="modal-body">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-4 col-sm-offset-1">
          <h4>Choose your themes </h4>
          <%= simple_form_for(Choice.new, url: choices_path(@poll), method: :post, remote: true) do |f| %>
            <div class="theme-choices">
              <div class="row">
              <% Theme.all.each do |theme| %>
                <div class="col-xs-12 col-sm-6 col-md-6">
                  <div class="theme-choice">
                    <input type="checkbox" class="hidden" value="<%= theme.id %>" name="event[theme_ids][]" id="event_theme_ids_<%= theme.id %>">
                    <label for="event_theme_ids_<%= theme.id %>">
                      <%= image_tag theme.photo, class: "img-theme" %>
                      <%= theme.name %>
                    </label>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Next step", class: "btn btn-action" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


