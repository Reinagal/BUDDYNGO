<div class="modal-content">
  <div class="modal-header text-center">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title w-100 font-weight-bold">Choose your dates</h4>
  </div>
  <div class="modal-body">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-4 col-sm-offset-1">
          <%= simple_form_for(Choice.new, url: choices_path, method: :post) do |f| %>
            <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
            <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
            <%= f.button :submit, "Add this dates", class: "btn btn-action" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
