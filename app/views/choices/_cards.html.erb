<div class="cards">
  <% destinations.each do |destination| %>
    <!-- Costs calculation -->
    <% end_date = @event.end_date.to_i %>
    <% start_date = @event.start_date.to_i %>
    <% days = end_date - start_date %>
    <% total = days.to_i * destination.average_daily_cost + destination.travel_cost %>
    <% min_budget = @event.budget.to_i*0.8 %>
    <% max_budget = @event.budget.to_i*1.2 %>
    <% if total >= min_budget #&& total <= max_budget %>
      <div class="card-category">

        <div class="card-image" style="background-image: url(<%= asset_path destination.photo %>)">
          <ul class="list-inline">
            <li class="list-inline-item"></li>
          </ul>
        </div>

        <div class="card-description">
          <h2><%= destination.name %></h2>
          <ul class="list-inline">
            <li class="list-inline-item">Average global cost: <i class="fas fa-euro-sign"></i>&nbsp;<strong><%= number_with_delimiter(total.to_i, separator: " ") %></strong>/per person <br><em>(travel costs estimates included)</em></li>
          </ul>
        </div>

      </div>
    <% end %>
  <% end %>
</div>
