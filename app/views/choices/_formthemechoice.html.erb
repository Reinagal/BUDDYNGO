<div class="modal-content">
  <div class="modal-header text-center">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title w-100 font-weight-bold">Choose your themes</h4>
  </div>
  <div class="modal-body">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-4 col-sm-offset-1">
          <%= simple_form_for(Choice.new, url: choices_path, method: :post, remote: true) do |f| %>
            <div class="form-inputs">
              <%= f.input :start_date,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "start_date" } %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Next step", class: "btn btn-action" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
